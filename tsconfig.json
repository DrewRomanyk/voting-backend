{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "files": [
        "src/index.d.ts"
    ],
    "include": [
        "./src/*.ts",
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
